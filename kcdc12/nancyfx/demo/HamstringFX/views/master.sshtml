<!DOCTYPE html>
<html>
  <head>
    <title>HamstringFX</title>
    <link type="text/css" rel="stylesheet" href="/styles/html5reset.css" />
    <link type="text/css" rel="stylesheet" href="/styles/hamstringfx.css" />
  </head>
  <body>
    <header class="shiny">
      <h1>HamstringFX</h1>
    </header>

    <div id="content">
      <div id="inner-content">
        <div id="quickactions">
          @Section['quickactions']
        </div>
        <div id="contentfocus">
          @Section['contentfocus']
        </div>
        <footer>
          <hr />
          &copy; 2012 Awesome Sawse, LLC | Running faster with <a href="http://nancyfx.org">NancyFX</a>
        </footer>
      </div>
    </div>

    <script type="text/javascript" src="/scripts/lib/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="/scripts/hamstringfx.js"></script>
    <script type="text/javascript">
      $().ready(function () {
        $('a.submit').hover(function () {
          $(this).addClass('shinyinv')
            .removeClass('shiny');
        },
        function () {
          $(this).removeClass('shinyinv')
            .addClass('shiny');
        });
      });
    </script>
  </body>
</html>